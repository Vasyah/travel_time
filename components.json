{
    "$schema": "https://ui.shadcn.com/schema.json",
    "style": "new-york",
    "rsc": true,
    "tsx": true,
    "tailwind": {
        "config": "tailwind.config.js",
        "css": "src/app/globals.css",
        "baseColor": "gray",
        "cssVariables": true,
        "prefix": ""
    },
    "iconLibrary": "lucide",
    "aliases": {
        "components": "@/components",
        "utils": "@/lib/utils",
        "ui": "@/components/ui",
        "lib": "@/lib",
        "hooks": "@/hooks"
    },
    "registries": {
        "@ss-components": "https://shadcnstudio.com/r/components/{name}",
        "@ss-themes": "https://shadcnstudio.com/r/themes/{name}",
        "@ss-blocks": "https://shadcnstudio.com/r/blocks/{name}"
    }
}
